<%= form_with(model: movie, multipart: true, local: true, class: "col-sm-6 col-md-5") do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :movie_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :duration %>
    <%= form.text_field :duration, id: :movie_duration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :director %>
    <%= form.text_field :director, id: :movie_director, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, id: :movie_rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :movie_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :poster %>
    <%= form.file_field :poster%>
  </div>

  <div class="form-check">
    <label for="movie_watched" class="form-check-label">
      <input name="movie[watched]" type="hidden" value="0"><input class="form-check-input" type="checkbox" value="1" name="movie[watched]">
      Watched
    </label>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
