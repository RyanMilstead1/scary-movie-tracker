var $unwatchedMovies = $('.unwatched-movies').children();
var $watchedMovies = $('.watched-movies').children();
var selectedMovieTitle = '<%= @movie.title %>';

for (i=0; i < $unwatchedMovies.length; i++) {
  if ($unwatchedMovies[i].textContent.trim() === selectedMovieTitle) {
    var $movie = $($unwatchedMovies[i]);
    $movie.fadeOut();
    $('.watched-movies').prepend("<%=j render 'movie', movie: @movie %>").hide().fadeIn(2000);
    $('[data-toggle="tooltip"]').tooltip()
  }
}
